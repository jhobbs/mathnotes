# Dockerfile.playwright  – Playwright 1.54 on Ubuntu 24.04 (noble)
FROM mcr.microsoft.com/playwright:v1.54.0-noble

WORKDIR /usr/src/app

# 1️⃣ Install playwright dependencies (cache‑friendly layer)
COPY playwright-package.json ./package.json
RUN npm install

# 2️⃣ Copy the rest of the project (scripts, sources, etc.)
COPY . .

# 3️⃣ Default entry point (override with `docker run …` if you like)
CMD ["node", "scripts/crawler.js", "http://localhost:5000"]
