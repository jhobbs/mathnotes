{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "p5/global"],
    "baseUrl": ".",
    "paths": {
      "@framework": ["./demos-framework/src/index"],
      "@framework/*": ["./demos-framework/src/*"],
      "@demos/*": ["./demos/*"]
    }
  },
  "include": [
    "demos-framework/**/*.ts",
    "demos-framework/**/*.tsx",
    "demos/**/*.ts",
    "demos/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "static/dist"
  ]
}